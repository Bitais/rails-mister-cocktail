<div class="banner-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @cocktail.photo %>);">
  <div class="banner-content">
    <h1>Edit your <%= @cocktail.name %>cocktail</h1>
    <%= form_for(@cocktail) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :photo %>
      <%= f.text_field :photo, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
    </div>
  </div>

  <div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-info"><%= link_to 'back to list', cocktails_path %></button>
    <button type="button" class="btn btn-default"><%= link_to 'edit this cocktail', edit_cocktail_path %></button>
    <button type="button" class="btn btn-danger"><%= link_to "Delete", cocktail_path(@cocktail),
        method: :delete,
        data: { confirm: "Are you sure?" } %></button>
</div>
